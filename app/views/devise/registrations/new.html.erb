<div class="form-color">
<div class="container-fluid" style="margin-top: 100px">

<div class="col-xs-12 col-md-6 col-md-offset-3 text-center">

<h2>Créer un compte</h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :last_name, label: "Nom", required: true, autofocus: true %>
    <%= f.input :first_name, label: "Prenom", required: true, autofocus: true %>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :phone_number, label: "Téléphone", required: true, autofocus: true %>
    <%= f.collection_radio_buttons :restaurant_owner, [[true, 'Vous êtes un restaurateur?'] ,[false, 'Vous venez commander un plat']], :first, :last %>
    <%= f.input :password, label: "Mot de passe", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Confirmation du mot de passe", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Validez", class: "btn btn-primary" %>
  </div>
<% end %>


  </div>
</div>
</div>
