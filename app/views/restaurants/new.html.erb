<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= simple_form_for @restaurant do |f| %>

        <%= f.input :name, label: 'Nom du restaurant:',input_html: {:maxlength => 10}, placeholder: 'La belle marmite' %>
        <%= f.input :phone_number, label: 'Numéro de téléphone:',input_html: {:maxlength => 10}, placeholder: '0142505310' %>
        <%= f.select :category, collection: [ "Cuisine Française", "Italien", "Asiatique"], label: 'Type de cuisine'  %>
        <%= f.input :picture, label: 'Photo du restaurant' %>

        <%= f.input :address, label: "Numéro et nom de votre rue" %>
        <%= f.input :zip_code , label: "Code postal" %>
        <%= f.input :city, label: "Ville" %>
        <%= f.input :iban, label: "IBAN de l'étalissement" %>

        <%= f.button :submit, "Valider", class: "btn btn-success" %>

      <% end %>
    </div>
  </div>
</div>
