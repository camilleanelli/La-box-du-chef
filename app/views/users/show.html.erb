
<div class="row ">
  <div class="text-center col-xs-12 col-sm-12" id="profil-box">
    <div class="form-inline">
      <div class="input-group">
        <h4 class="hidden-xs">Bienvenue sur votre compte <%= current_user.first_name %></h4>
      </div>
      <div class="input-group">
        <div><%= link_to "Modifier mes infos", edit_user_registration_path(current_user), class: "btn btn-primary" %></div>
      </div>
    </div>
  </div>
</div>

<% if current_user.restaurant_owner? %>

  <div class="row">
    <div class="col-xs-12 col-sm-12 text-center " id="restaurant-profil-box" >
      <div class="form-group" >
          <h4>ÉTALISSEMENT(S)</h4>
          <% current_user.restaurants.each do |restaurant| %>
            <p><%= restaurant.name.upcase %></p>
            <%= image_tag restaurant.picture.url(:thumb), class: "img-thumbnail padding-btn-profil"  %>
        </div>
        <div class="form-group" >
          <%= link_to "Modifier", edit_restaurant_path, class: "btn btn-primary padding-btn-profil" %>
        </div>
          <div class="form-group" >
            <%= link_to "Ajouter un deal", new_restaurant_meal_path(restaurant), class: "btn btn-success padding-btn-profil" %>
          </div>
        <% end %>

      </div>
    </div>

        <div class="row dashbord-restaurant">

              <h4 class="text-center">VOS OFFRES EN COURS</h4>
                <table class="table-responsive">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Mise en ligne</th>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Qté</th>
                        <th>Modifier</th>
                      </tr>
                    </thead>
                    <%  @restaurants.each do |restaurant| %>
                      <% restaurant.meals.each do |meal| %>
                        <tbody>
                            <tr>
                              <td><%= meal.starting_date %></td>
                              <td><%= link_to meal.name, meal_path(meal), class: "btn btn-primary btn-xs" %> </td>
                              <td ><%= number_to_currency(meal.price, :unit => "€") %></td>
                              <td ><%= meal.quantity %></td>

                              <td ><%= link_to image_tag("gants.png", size: "50x50", color:"grey"), edit_restaurant_meal_path(restaurant, meal) %></td>
                            </tr>
                        </tbody>
                         <% end %>
                      <% end %>
                  </table>
                </table>


          </div>



          <div class="row dashbord-restaurant">

           <div class="col-xs-12">
              <h4 class="text-center">COMMANDES </h4>

                <table class="table-responsive">
                  <table class="table table-hover" >
                  <thead>
                    <tr>
                      <th>Date</th>
                      <th>Commande</th>
                      <th>Prix total</th>
                      <th>Commission</th>
                      <th>A percevoir</th>



                    </tr>
                  </thead>
                      <% @paid_orders.each do |order| %>
                        <tbody>
                        <tr>
                          <td><%= order.created_at.strftime("%Y-%m-%d") %></td>
                          <td><strong><%= link_to "Numéro: #{order.id}", order_path(order), class: "btn btn-success btn-xs" %></strong></td>
                          <td><%= order.amount %></td>
                          <td><%= order.amount * 0.20 %></td>
                          <td><%= order.amount * 0.80 %></td>
                        </tr>
                      </tbody>
                    <% end %>


                </table>
              </table>
            </div>

          </div>



  <% else %>

        <h1 class="text-center">MES DERNIÈRES COMMANDES</h1>

         <div class="row">
          <div class="col-md-6 col-md-offset-3 text-center">
            <%= image_tag ("eating.png"), size:"50x50" %>
             <table class="table table-hover table-responsive">
                    <thead>
                      <tr>
                        <th>Date</th>
                        <th>Repas</th>
                        <th>Restaurant</th>
                        <th>Qté</th>
                        <th>Prix</th>

                      </tr>
                    </thead>
                      <% current_user.orders.each do |order| %>
                          <% order.order_meals.each do |order_meal| %>
                            <tbody>
                              <tr>
                                <td class="style-table"><%= order_meal.created_at.strftime("%Y-%m-%d") %></td>
                                <td class="style-table"><%= order_meal.meal.name %></td>
                                <td class="style-table"><%= order_meal.meal.restaurant.name %></td>
                                <td class="style-table"><%= order_meal.quantity %></td>
                                <td class="style-table"><%= number_to_currency(order_meal.price, :unit => "€") %></td>
                              </tr>
                            </tbody>
                         <% end %>
                      <% end %>
                </table>
                <h2><%= link_to "Commander ici", meals_path, class: "btn btn-success lg" %>
                </h2>
           </div>
        </div>
      </div>
<% end %>
</div>



