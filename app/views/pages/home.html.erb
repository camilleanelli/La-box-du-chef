<div class="banner-index text-center" style="padding:0px">
  <div id="banner-container" >
      <div class="filter">
        <div id="presentation" class="text-center">
          <h1> DES PLATS DE CHEFS A PETITS PRIX A PARIS </h1>
          <h2> Cliquez, commandez, récuperez, savourez !</h2>

  <div class="row">
    <div class="text-center col-xs-12 col-sm-3 col-sm-offset-4">

              <%= form_tag('/meals', method: "get", class:"black-box") do %>
              <h3 class="text-center">RESERVEZ VOTRE REPAS</h3>

                <div class="form-group" id="form-field" >
                  <h4>Quel prix ?</h4>
                  <%= select_tag :price_group, options_for_select(Meal::ALL_PRICES)  %>
                 </div>
                  <h4>Quand ?</h4>
                 <div class="form-group" id="form-field">
                  <%= select_tag :when_group, options_for_select([["Today", Date.today], ["Tomorrow", Date.today+1]]) %>
                 </div>
                 <div style="height:50px;"></div>
                 <div class="form-group">
                    <%= button_tag(type: "submit", class: "btn btn-success") do %>
                    <h5>RECHERCHER</h5>
                </div>
                  <% end %>
              <% end %>

    </div>
  </div>

<div style="background:linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%); margin-top:55px;">

    <div class="row" style="margin:20px">
      <div style="padding-bottom:20px">
         <div class="container">
        <h3 class="text-center" style="padding-top:0px;">How does it work ?</h3>
      </div>
      <div>
        <div class="text-center col-xs-12 col-sm-3">
          <%= image_tag ("eshop.png"), size:"100x100"%>
          <p>Order Online</p>
        </div>
        <div class="text-center col-xs-12 col-sm-3">
          <%= image_tag ("walker.png"), size:"100x100" %>
          <p>Go to the restaurant</p>
        </div>
        <div class="text-center col-xs-12 col-sm-3">
          <%= image_tag ("foodbox.png"), size:"100x100" %>
          <p>Get your box</p>
        </div>
        <div class="text-center col-xs-12 col-sm-3">
          <%= image_tag ("eating.png"), size:"100x100" %>
          <p>Enjoy your meal</p>
        </div>
      </div>
    </div>
  </div>

  <div class="container">

      <h3 class="text-center">Lets watch the last meals</h3>
      <div class="col-xs-12 col-sm-4">
        <% @meals.last(4).each do |meal| %>
          <div class="card-home card-bg card-gradient" style="margin-left:0px">
              <h2><%= link_to meal.name %></h2>
              <p><%= meal.name.upcase %></p>
              <p><%= meal.price %>€</p>
               <div class="position"><p><%= link_to "RESERVER", restaurant_meals_path(@restaurant, @meal), class: "btn btn-success"%></p></div>
          </div>
         <% end %>

    </div>
  </div>
</div>

