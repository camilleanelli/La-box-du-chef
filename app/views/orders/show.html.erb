<div id="body-container" >

    <div class="col-xs-12 col-sm-8 text-center">
      <table class="table table-striped table-responsive">
          <thead>
            <tr>
              <th>Quantité</th>
              <th>Désignation</th>
              <th>Nom du client</th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <% @order.order_meals.each do |order_meal| %>

              <td class="success"><%= order_meal.quantity %></td>
              <td class="success"><%= order_meal.meal.name %></td>
              <td class="success"><%= @order.user.last_name %></td>
            <% end -%>

            </tr>
          </tbody>
        </table>

        <div class="button-padding"><%= link_to "Retour", user_path(current_user), class: "btn btn-success" %></div>
    </div>

</div>

