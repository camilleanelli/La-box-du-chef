<div id="body-container" >

      <div class="row ">
        <div class=" text-center col-xs-12 col-sm-12 meal-index-search">
              <%= form_tag('/meals', method: "get", class:"form-inline") do %>
              <h3 class="text-center">RESERVEZ VOTRE BOX</h3>
          <div class="text-center col-xs-6 col-sm-3">
             <div class="input-group">
                <div class="form-group" id="form-field" >
                  <h4>Mon budget</h4>
                  <%= select_tag :price_group, options_for_select([["0 à 5 €", 5],["Jusqu'à 10 €",10 ], ["Jusqu'à 15 €",15 ]])  %>
                 </div>
              </div>
            </div>
         <div class="text-center col-xs-6 col-sm-3">
            <div class="input-group">
                    <h4>Quand ?</h4>
                   <div class="form-group" id="form-field ">
                    <%= select_tag :when_group, options_for_select([["Aujourd'hui", Date.today], ["Demain", Date.today+1]]) %>
                   </div>
            </div>
         </div>
         <div class="text-center col-xs-6 col-sm-3">
            <div class="input-group">
                 <ul class="list-inline">
                    <li>
                       <h4>Retrait de ?</h4>
                       <div class="form-group" style="color:black;">
                        <%= time_select "start", prefix: :start_date  %>
                       </div>
                    </li>
                    <li>
                      <h4>Retrait à ?</h4>
                     <div class="form-group" style="color:black;">
                       <%= time_select "end", prefix: :end_date  %>
                     </div>
                     </li>
                  </ul>
              </div>
           </div>
           <div class="text-center col-xs-6 col-sm-3">
               <div class="input-group">
                   <div class="form-group" >
                      <%= button_tag(type: "submit", class: "btn btn-success") do %>
                      <h5>RECHERCHER</h5>
                    </div>
               </div>
                  <% end %>
              <% end %>
            </div>
      </div>
  </div>

    <div class="container">
      <div class="row">
          <div class="col-xs-12 col-sm-6" >
              <h3 class="text-body" id="text-meal-index">OFFRES EN COURS</h3>
            <% @meals.each do |meal| %>
              <div class="col-xs-12 col-sm-6">
                <div class="card" style="width:100%; padding:10px; background-image: url('<%=image_path meal.picture.url(:medium)%>')">
                  <div class="card-filter card-bg">
                  <p id="card-name-position"><%= meal.name.upcase %></p>

                  <p id="card-price-position"><%= meal.price %>€</p>

                  <p class="icon-badge icon-badge-green icon-badge-bordered"><%= meal.quantity %></p>

                  <div  class="position">
                  <%= link_to "RESERVER", meal_path(meal), class: "btn btn-success"%>
                  </div>
                  </div>

                </div>
              </div>
            <%end%>

          </div>


            <div class="col-xs-12 col-sm-6" >

              <div id="map" style="height:620px; margin-left:10px; margin-right:10px; margin-bottom:10px; margin-top:20px">
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>

  <% content_for(:after_js) do %>
    <%= javascript_tag do %>
      $(document).on('ready', function() {
        handler = Gmaps.build('Google');
        handler.buildMap({ internal: { id: 'map' } }, function(){
          markers = handler.addMarkers(<%= raw @markers.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
        });
      })
    <% end %>
  <% end %>

