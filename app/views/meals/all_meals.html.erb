<h1 class="text-center">Trouvez votre plat ici</h1>

<%= paginate @meals %>

<p>TO DO bar de recherche</p>
<div class="container">
<% @meals.each do |meal| %>
  <div class="col-xs-12 col-md-4" style="height: 400px">
     <%= meal.name %>
     <%= image_tag meal.picture.url(:medium) %>
     <%= link_to "Commander", meal_path(meal), class: "btn btn-default" %>
 </div>
<% end %>
</div>

<%= paginate @meals %>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).on('ready', function() {
      handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function(){
        markers = handler.addMarkers(<%= raw @markers.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      });
    })
  <% end %>
<% end %>
